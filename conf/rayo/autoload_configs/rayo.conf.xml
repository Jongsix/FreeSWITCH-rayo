<configuration name="rayo.conf" description="Rayo server config">

	<!-- global params -->
	<settings>
		<param name="max-idle-sec" value="30"/>
	</settings>

	<!-- Listeners for new Rayo client connections -->
	<listeners>
		<listener>$${local_ip_v4}</listener>
	</listeners>

	<!-- Authorized users -->
	<users>
		<user name="usera" password="1"/>
	</users>
</configuration>

