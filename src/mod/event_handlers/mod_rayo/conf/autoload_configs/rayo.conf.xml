<configuration name="rayo.conf" description="Rayo server config">

	<!-- global params -->
	<settings>
		<param name="foo" value="bar"/>
	</settings>

	<!-- Listeners for new Rayo client connections -->
	<listeners>
		<listener>$${local_ip_v4}</listener>
	</listeners>

	<!-- Authorized users -->
	<users>
		<user name="usera@$${local_ip_v4}" password="1"/>
	</users>
</configuration>

